<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="139dp"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:layout_width="149dp"
        android:layout_height="match_parent"
        android:id="@+id/iv_cover_plaza"
        android:scaleType="fitXY"
        android:background="@drawable/bg_cover_playing"
        tool:src="@drawable/ic_default_bottom_music_icon"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.CardView
        android:layout_width="235dp"
        android:layout_height="94dp"
        app:layout_constraintTop_toTopOf="@+id/iv_cover_plaza"
        app:layout_constraintBottom_toBottomOf="@+id/iv_cover_plaza"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:padding="10dp"
        android:background="@drawable/bg_cover_playing">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_song_name_item"
            android:textSize="15sp"
            android:textColor="@color/color_song_name_main"
            tool:text="Song Name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_singer_item"
            android:textColor="@color/color_singer_playing"
            android:textSize="12sp"
            tool:text="Singer"
            android:layout_marginTop="23dp"/>

        <ImageView
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:id="@+id/iv_user_head"
            android:layout_marginTop="44dp"
            android:src="@drawable/ic_disk_src"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_comment_item"
            android:textSize="13sp"
            android:textColor="@color/color_song_name_main"
            android:text="@string/comment_music"
            android:layout_marginTop="43dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_last_time_item"
            android:text="@string/last_time_item"
            android:textColor="@color/color_singer_playing"
            android:textSize="11sp"
            android:layout_marginTop="62dp"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="50dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/iv_play_item"
            android:src="@drawable/ic_play_piazza"
            android:layout_marginTop="36dp"
            android:layout_marginStart="191dp"
            android:layout_marginLeft="191dp" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>