<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:background="@color/color_theme">
    
    <ImageView
        android:layout_width="7dp"
        android:layout_height="15dp"
        android:id="@+id/iv_tool_bar_back"
        android:src="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.7"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_song_name_tool_bar"
        android:textSize="18sp"
        android:textColor="@color/color_text_color_tool_bar"
        app:layout_constraintTop_toTopOf="@+id/iv_tool_bar_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tool:text="SongName"/>

    <ImageView
        android:layout_width="19dp"
        android:layout_height="16dp"
        android:id="@+id/iv_tool_bar_menu"
        android:src="@drawable/ic_setting"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_tool_bar_bottom"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>